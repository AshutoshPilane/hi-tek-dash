{
  "rewrites": [
    {
      // Source: Matches /api followed by anything, including the query string
      "source": "/api(.*)",
      
      // Destination: Proxies to the Apps Script base URL and appends the matched part ($1), 
      // which correctly passes the query string (e.g., ?sheet=Projects)
      "destination": "https://script.google.com/macros/s/AKfycbzxcMcx2Fm7ZW8lWX_1hxYemFP8n35XPbEIswQUm-V2xH4AraXGcdB2TH077BU4aIHVNA/exec$1"
    }
  ]
}
